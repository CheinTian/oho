---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Social from "../components/Social.astro";

---

<!doctype html>
<html data-theme="cupcake">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.loading-2xl {
				width: 5rem;
			}
		</style>
	</head>
	<body>
		<div class="flex justify-center items-center flex-col min-h-screen">
			<span class="loading loading-infinity loading-2xl"></span>

			<p id="bio" class="text-center text-lg pb-5 tracking-tighter underline">
				Work Hard in silence, let your success be your noise.
			</p>

			<div class="avatar">
				<div class="w-32 mask mask-squircle">
					<img src="/avatar.png" alt=""/>
				</div>
			</div>

			<p class="text-center text-xl text-gray-500 pt-2">
				<span class="text-primary">&lt;Developer /&gt;</span>
			</p>

			<div class="grid grid-flow-col gap-2 mt-5">
				<span class="btn btn-xs sm:btn-sm md:btn-md text-primary">数字游民</span>
				<span class="btn btn-xs sm:btn-sm md:btn-md text-secondary">云原生</span>
				<span class="btn btn-xs sm:btn-sm md:btn-md text-info">AI</span>
				<span class="btn btn-xs sm:btn-sm md:btn-md text-blue-500">xOps</span>
			</div>

			<div>
				<Social id="social"></Social>
			</div>

			<Header />
		</div>

	<Footer />
	</body>
</html>

<script>

	// 简单的句子装饰函数
	const sentence = document.getElementById('bio')

	if (sentence ) {

		const letters = sentence.innerHTML;

		sentence.innerHTML = '';

		let index = 0;

		function showNextLetter() {
			if (index < letters.length) {
				if (sentence) {
					sentence.innerHTML += letters.charAt(index);
					index++;
					setTimeout(showNextLetter, 50); // 调整延迟时间以控制逐字展示的速度
				}

			}
		}

		showNextLetter();
	}



</script>
